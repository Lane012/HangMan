<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/creator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"
    android:background="#02d633"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/Header"
        style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/food"
        android:text="@string/GameDirectory"
        android:textSize="60sp" />

    <Button
        android:id="@+id/onePlayer"
        android:layout_width="wrap_content"
        android:layout_height="115sp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="87dp"
        android:background="@drawable/random"
        android:text="@string/OnePlayer"
        android:textSize="50sp" />

    <Button
        android:id="@+id/twoPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onePlayer"
        android:background="@drawable/music"
        android:text="@string/TwoPlayer"
        android:textSize="60sp"
         />




</RelativeLayout>